<h1>CODEBASE BOOKS</h1>
<h2>新規登録</h2>

<%=form_with url: "/signup" do |user|%>
  <div>
    <%= user.label :メール： %>
    <%= user.text_field :mail, name: 'user[mail]'%>
  </div>
  <div>
    <%= user.label :名前： %>
    <%= user.text_field :name, name: 'user[name]'%>
  </div>
<div>
    <%= user.label :パスワード： %>
    <%= user.text_field :password, name: 'user[password]'%>
  </div>
  <div>
  <%= link_to ("/books") do %>
    <%= user.submit '登録' %>
  <% end %>
  </div>
<%end%>