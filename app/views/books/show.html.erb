<h3>本の詳細 > <%= @book.title %></h3>
	<div>
		<% if @book.image_name %>
			<%= image_tag "/images/#{@book.image_name}" %>
		<% else %>
			<%= image_tag "/images/noImage.jpg" %>
		<% end %>
		<h2><%= @book.title %></h2>
	</div>

<%= form_with model: Lending do |form| %>
	<%= form.hidden_field :book_id, :value => @book.id %>
	<div>
		<%= form.date_field :start_date %>から
	</div>
	<div>
		<%= form.date_field :end_date %>まで
	</div>
	<div>
      <%= form.submit "借りる" %>
	</div>
<% end %>

<div>
	<% if @lend %> 
		<p>以下の日程で予約が入っています。<br>
			日程が被らないように貸出・予約しましょう。</p>
		<% @lend.each do |lending| %>
		<p><%= lending.start_date %>〜<%= lending.end_date %></p>
		<% end %>
	<% end %>
</div>