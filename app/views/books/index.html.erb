<h1>本一覧</h1>
<h2>--------------------------------</h2>
<% @books.each do |book| %>
  <a href="/books/<%= book.id %>" class="card-link">
    <div class="card">
      <img src="<%= book.image_name %>" alt="<%= book.title %>" class="card-image">
      <h2 class="card-title"><%= book.title %></h2>

      <% mylending = @lendings.find { |lending| lending.book_id == book.id && lending.user_id == session[:user]["id"] && lending.end_date >= Date.today } %>
      <% lending = @lendings.find { |lending| lending.book_id == book.id && lending.end_date >= Date.today } %>
      <% myreservation = @reservations.find { |reservation| reservation.book_id == book.id && reservation.user_id == session[:user]["id"] && reservation.start_date <= Date.today } %>
      <% reservation = @reservations.find { |reservation| reservation.book_id == book.id && reservation.start_date <= Date.today } %>

      <% if mylending %>
        <div class="card-content">
          <h2>==========</h2>
          <p>現在借りています</p>
          <h2>==========</h2>
        </div>
      <% elsif lending %>
        <div class="card-content">
          <h2>==========</h2>
          <p>貸し出し中</p>
          <h2>==========</h2>
        </div>
      <% elsif myreservation %>
        <div class="card-content">
          <h2>==========</h2>
          <p>予約しています</p>
          <h2>==========</h2>
        </div>
      <% elsif reservation %>
        <div class="card-content">
          <h2>==========</h2>
          <p>予約されています</p>
          <h2>==========</h2>
        </div>
      <% else %>
        <div class="card-content">
          <h2>==========</h2>
          <p>貸出可能</p>
          <h2>==========</h2>
        </div>
      <% end %>
    </div>
  </a>
<% end %>
